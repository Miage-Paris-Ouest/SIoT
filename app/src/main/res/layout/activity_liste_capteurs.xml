<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choix_capteurs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="siot.application.ChoixCapteurs"
    android:background="@android:color/background_light">

    <TextView
        android:text="Lumière"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/son"
        android:layout_alignStart="@+id/son"
        android:layout_marginTop="34dp"
        android:id="@+id/lumiere"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignEnd="@+id/son"
        android:layout_alignRight="@+id/son"
        android:layout_alignLeft="@+id/son"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="Son"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/son"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/switch4"
        android:layout_alignStart="@+id/mouvement"
        android:layout_alignEnd="@+id/mouvement"
        android:layout_alignLeft="@+id/mouvement"
        android:layout_alignRight="@+id/mouvement"
        android:textColor="@android:color/holo_blue_dark" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch5"
        android:layout_alignTop="@+id/lumiere"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_below="@+id/lumiere"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/switch5"
        android:layout_alignStart="@+id/switch5" />

    <TextView
        android:text="Fumée"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fumee"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/switch2"
        android:layout_alignStart="@+id/lumiere"
        android:layout_alignLeft="@+id/lumiere"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo"
        android:layout_alignBottom="@+id/textView2"
        android:id="@+id/imageView" />

    <TextView
        android:text="Liste des capteurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:checked="false"
        android:layout_alignTop="@+id/mouvement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Mouvement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:id="@+id/mouvement"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:onClick="true"
        android:clickable="true"
        android:layout_marginLeft="11dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch4"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/switch3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch7"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/switch3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/switch4"
        android:layout_alignStart="@+id/switch4" />

    <TextView
        android:text="Air Quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/air"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:onClick="true"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/fumee"
        android:layout_alignStart="@+id/fumee" />

    <TextView
        android:text="Gaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gaz"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:onClick="true"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/air"
        android:layout_alignLeft="@+id/air"
        android:layout_alignStart="@+id/air" />


</RelativeLayout>