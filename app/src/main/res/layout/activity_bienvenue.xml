<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/White">

    tools:context="siot.awssiot.Bienvenue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="DIDACTIEL"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"

                android:text="SIoT vous permet d'utiliser des capteurs de manière simple et de découvrir l'univers des objets connectés. ." />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="135dp"
            android:layout_marginRight="135dp"
            android:layout_marginTop="16dp"
            android:background="@color/lightgrey"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"

                android:text="Dans un premier temps, vous allez vous identifier à l'aide de ce token. En cliquant sur ce bouton, vous permettez à Amazon de lier votre téléphone à l'application " />


        </LinearLayout>

        <Button
            android:id="@+id/logTokenButton"
            android:layout_width="198sp"
            android:layout_height="35sp"
            android:layout_gravity="center_horizontal"
            android:text="ENVOYER TOKEN"
            android:background="@color/colorPrimary"
            android:textColor="@color/White"
            android:layout_marginTop="20sp" />


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/boutonDashboard"
        android:layout_width="198dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:text="Dashboard"
        android:background="@color/colorPrimary"
        tools:textColor="@color/White" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />


    <Button
        android:id="@+id/boutonCapteur"
        android:layout_width="198dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/boutonCapteur"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light" />



    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_light" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="135dp"
            android:layout_marginRight="135dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"></View>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@mipmap/logo_sup"
        android:id="@+id/next_dashboard"
        android:layout_marginTop="150dp" />


</LinearLayout>
